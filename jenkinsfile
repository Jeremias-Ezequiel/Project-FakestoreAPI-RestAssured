pipeline{
    agent any 

    stages{
        stage('Build'){
            steps{
                bat './mvnw clean compile'
            }
        }
        stage('Postman Smoke Test'){
            steps{
                bat './mvnw smokePostman.bat'
            }
        }
        stage('Test'){
            steps{
                bat './smokeTest.bat'
            }
        }
        stage('Generate Allure Report'){
            steps{
                allure includeProperties: false, jdk: '', results: [[path: 'target/allure-results']] 
            }
        }
    }
    post{
        always{
            always{
                cleanWs()       
            }
        }
    }
}