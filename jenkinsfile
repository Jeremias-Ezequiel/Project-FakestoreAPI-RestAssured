pipeline{
    agent any 

    stages{
        stage('Build'){
            steps{
                bat './mvnw clean compile'
            }
        }
        stage('Test'){
            steps{
                bat './smokeTest.bat'
            }
        }
        stage('Generate Allure Report') {
            steps {
                bat 'allure generate target/allure-results -o target/allure-report --clean'
                allure includeProperties: false, jdk: '', results: [[path: 'target/allure-results']]
            }   
        } 
    }
    post{
        always{
            cleanWs()       
        }
    }
}